private static readonly string[] OtherDocumentPhrases =
{
    "Zgoda umowy poręczenia",
    "Aneks umowy poręczenia",
    "Oświadczenie poręczyciela"
};

private static readonly string[] GuaranteeOrBillPhrases =
{
    "Weksel własny",
    "Oświadczenie wekslowe",
    "Deklaracja wekslowa BGK"
};

public bool AnyOtherDocument(IReadOnlyCollection<string> documents)
{
    return ContainsDocumentWithAnyPhrase(documents, OtherDocumentPhrases);
}

public bool AnyGuaranteeOrBillDocument(IReadOnlyCollection<string> documents)
{
    return ContainsDocumentWithAnyPhrase(documents, GuaranteeOrBillPhrases);
}

private static bool ContainsDocumentWithAnyPhrase(
    IReadOnlyCollection<string> documents,
    IReadOnlyCollection<string> phrases)
{
    if (documents == null || documents.Count == 0)
    {
        return false;
    }

    foreach (var document in documents)
    {
        // Skip empty entries to avoid unnecessary checks
        if (string.IsNullOrWhiteSpace(document))
        {
            continue;
        }

        // Check if document contains any of the phrases
        var containsAnyPhrase = phrases.Any(phrase =>
            document.Contains(phrase, StringComparison.OrdinalIgnoreCase));

        if (containsAnyPhrase)
        {
            return true;
        }
    }

    return false;
}
