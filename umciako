public readdataFromFile(): void {
  const barcodeId = this.formGroup.get('barcodeId')?.value;

  this.cmkdownApiService.getZswBalanceDocumentData(barcodeId)
    .subscribe({
      next: (response) => {
        this.data.documentSelect = response;
        this.cdr.detectChanges();
      },
      error: (error) => {
        if (error.status === 500) {
          // Inform the user that the file was not found or server error occurred
          this.toastService.notify({
            message: 'Plik nie został znaleziony lub wystąpił błąd serwera.',
            type: MessageType.Error
          });
        } else {
          // Optional: handle other types of errors
          this.toastService.notify({
            message: 'Wystąpił nieoczekiwany błąd. Spróbuj ponownie później.',
            type: MessageType.Error
          });
        }
      }
    });
}
